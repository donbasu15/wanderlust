<% layout("/layouts/boilerplate") %>
<style>
    .filters{
        z-index: 3;
       
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter{
        display: flex;
        flex-direction: column;
      
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;
    }
    
    .filter:hover{
        opacity: 1;
        cursor:pointer;
    }
    .filter p {
        font-size: 0.8rem;
    }
    .tax-info{
        display: none;
    }
    .tax-toggle{
        border: black 1px solid;
        border-radius: 1rem;
        height: 2.5rem;
        padding: 1rem;
        /* margin-left: 6rem; */
        display: flex;
        align-items: center;
    }
    .form-check-label{
       font-size: smaller;
    }
    .nav-button{
        height: 3rem;
        
    }
    .btn{
       background-color: #fe424d;
       color: #fff;
    }
    .modal-btn:hover{
       background-color: #fe424d;
       color: #fff;
    }
    
    /* .all-cards{
        position: relative;
        top: 70px;
      } */
    @media(min-width : 992px){
      .modal-btn{
          display: none;
      }
      .all-cards{
          position: relative;
          top: 80px;
       }
      
    }
    @media(max-width : 992px){
      .navbar-categories{
          display: none;
      } 
    }
    .nav-div{
      display: flex;
      align-items: center;
      background-color: #fff;
      justify-content: center;

    }
.test{
  background-color: green;
  height: 100px;
  position: fixed;
  top: 100px;
}
.all-cards{
  position: relative;
  top: 80px;
}
</style>
<body>
    
 
<div class="all-cards">
    <%- include("../includes/flash.ejs") %>
    <!-- <h1>All Listings</h1> -->
    <div class="row  row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3" >
      
        <%   for(let listing of allListing){%>
            <a class="a-card" href="/listings/<%= listing._id %>">
                <div class="card listing-card" style="width: 22rem;">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_img" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text">
                        <b> <%= listing.title %> <br></b>
                        &#8377;&nbsp;<%= listing.price.toLocaleString("en-IN") %> / night
                         <i class="tax-info"> &nbsp; &nbsp; + 18% GST</i>
                      </p>
                    </div>
                </div>
            
            </a>
            
        <%  }%>
    

    </div>
  </div>
    
    
</body>


<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click",()=>{
        let info = document.getElementsByClassName("tax-info");
        
        for(i of info){
            if(i.style.display !== "inline"){
                i.style.display = "inline";
            }else{
                i.style.display = "none";
            }
            
        }
    })

</script>